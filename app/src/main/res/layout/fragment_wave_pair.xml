<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.WavePairFragment">

    <android.support.v7.widget.Toolbar style="@style/AppTheme.Toolbar"
        app:title="@string/fragment_wave_pair"/>

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:mwhColorAlpha="0.7"
        app:mwhWaveHeight="20dp"
        android:scaleY="-1">
        <com.scwang.wave.Wave style="@style/MultiWaveHeader.Wave"
            app:mwVelocity="100dp"
            app:mwScaleX="1.2"/>
        <com.scwang.wave.Wave style="@style/MultiWaveHeader.Wave"
            app:mwOffsetX="100dp"
            app:mwVelocity="-90dp"/>
    </com.scwang.wave.MultiWaveHeader>

</LinearLayout>